!-- Xft settings -- !
Xft.antialias:	1
Xft.hinting:	1
Xft.autohint:	0
Xft.hintstyle:	hintslight
Xft.rgba:	rgb
Xft.lcdfilter:	lcddefault
Xft.dpi:   100

st.font:         JetBrainsMono Nerd Font:style:medium:pixelsize=20

! window border inner
st.opacity: 255
st.borderpx: 10

! Base16 Monokai Stone
! Scheme: Gleb Zernov

#define base00 #25282D
#define base01 #3f4246
#define base02 #5a5c5f
#define base03 #747678
#define base04 #5E6471
#define base05 #a8a9ab
#define base06 #c3c3c4
#define base07 #DDDDDD
#define base08 #FF6188
#define base09 #FC9867
#define base0A #FFD866
#define base0B #A9DC76
#define base0C #78E8C6
#define base0D #78DCE8
#define base0E #A796E3
#define base0F #E991E3

*.foreground:   base06
#ifdef background_opacity
	*.background:   [background_opacity]base00
#else
	*.background:   base00
#endif
*.cursorColor:  base06

*.color0:       base00
*.color1:       base08
*.color2:       base0B
*.color3:       base0A
*.color4:       base0D
*.color5:       base0E
*.color6:       base0C
*.color7:       base05

*.color8:       base03
*.color9:       base09
*.color10:      base01
*.color11:      base02
*.color12:      base04
*.color13:      base06
*.color14:      base0F
*.color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
  ! use 'shell' template to set these if necessary
  *color16:      base09
  *color17:      base0F
  *color18:      base01
  *color19:      base02
  *color20:      base04
  *color21:      base06

  tabbed.selbgcolor:   #282c34
  tabbed.selfgcolor:   #d6d8eb

  tabbed.normfgcolor:  #9294a8
  tabbed.normbgcolor:  #353b45
